<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98AFC7"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mistyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="#MistyPanda"
        android:clickable="true" />

    <Button
        android:id="@+id/eventList"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/appName"
        android:layout_below="@+id/appName"
        android:layout_marginTop="50dp"
        android:onClick="eventsClick"
        android:text="Events List" />

    <Button
        android:id="@+id/myCalendar"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/eventList"
        android:layout_below="@+id/eventList"
        android:text="My Calendar" />

    

    <TextView
        android:id="@+id/appName"
        android:layout_width="223dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="Effortless Events"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>